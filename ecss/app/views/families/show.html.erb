<div class="right-content__main">
  <%= link_to "編集", edit_hospital_patient_family_path(@hospital, @patient, @family), class: "btn btn-default" %>
  <%= link_to "患者プロフィール", hospital_patient_path(@hospital, @patient), class: "btn btn-default" %>

  <table class="table table-striped table-bordered">
    <p class="title-bar bg-default">
      家族情報
    </p>
    <tbody>
      <tr>
        <th>患者</th>
        <td><%= @patient.name %></td>
      </tr>
      <tr>
        <th>家族の名前</th>
        <td><%= @family.name %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @family.tel %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @family.mail %></td>
      </tr>
      <tr>
        <th>所在地</th>
        <td>
          〒<%= @family.postcode %><br>
          <%= @family.address %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

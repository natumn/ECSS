<div class="right-content__main">
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
  <table class="table table-striped table-bordered">
    <p class="title-bar">
      <span>家族情報</span>
    </p>
    <tbody>
      <tr>
        <div class="row">
        <th class="col-md-2">患者</th>
        <td class="col-md-6"><%= @patient.name %></td>
        </div>
      </tr>
      <tr>
        <th>家族の名前</th>
        <td><%= @family.name %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @family.tel %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @family.mail %></td>
      </tr>
      <tr>
        <th>所在地</th>
        <td>
          〒<%= @family.postcode %><br>
          <%= @family.address %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= link_to hospital_patients_path(@hospital), class: "btn btn-default" do %>
    <i class="fa fa-chevron-left fa-fw" aria-hidden="true"></i>一覧に戻る
  <% end %>
  <%= link_to "患者情報", hospital_patient_path(@hospital, @patient), class: "btn btn-default" %>
  <%= link_to "編集", edit_hospital_patient_family_path(@hospital, @patient, @family), class: "btn btn-default" %>
</div>

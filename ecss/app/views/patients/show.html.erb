<div class="right-content__main">
  <%= link_to "編集", edit_hospital_patient_path(@hospital, @patient), class: "btn btn-default" %>

  <table class="table table-striped table-bordered">
    <p class="title-bar bg-default">
      患者情報
    </p>
    <tbody>
      <tr>
        <th>ID</th>
        <td><%= @patient.id %></td>
      </tr>
      <tr>
        <th>名称</th>
        <td><%= @patient.name %></td>
      </tr>
      <tr>
        <th>生年月日</th>
        <td><%= @patient.birthday.strftime("%Y年%m月%d日") %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @patient.tel %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @patient.mail %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td>
          〒<%= @patient.postcode %><br>
          <%= @patient.address %>
        </td>
      </tr>
      <tr>
        <th>病気</th>
        <td><%= @patient.disease %></td>
      </tr>
    </tbody>
  </table>
</div>

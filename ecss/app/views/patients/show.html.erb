<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-striped table-bordered">
      <p class="title-bar">
        <span>患者情報</span>
      </p>
      <tbody>
        <tr>
          <div class="row">
            <th class="col-md-2">ID</th>
            <td class="col-md-6"><%= @patient.id %></td>
          </div>
        </tr>
        <tr>
          <th>名称</th>
          <td><%= @patient.name %></td>
        </tr>
        <tr>
          <th>生年月日</th>
          <td><%= @patient.birthday.strftime("%Y年%m月%d日") %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @patient.tel %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @patient.mail %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            〒<%= @patient.postcode %><br>
            <%= @patient.address %>
          </td>
        </tr>
        <tr>
          <th>病気</th>
          <td><%= @patient.disease %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to hospital_patients_path(@hospital), class: "btn btn-default" do %>
      <i class="fa fa-chevron-left fa-fw" aria-hidden="true"></i>一覧に戻る
    <% end %>
    <% unless @patient.family.present? %>
        <%= link_to "家族情報を追加", new_hospital_patient_family_path(@hospital, @patient), class: "btn btn-default" %>
    <% else %>
      <%= link_to "家族情報", hospital_patient_family_path(@hospital, @patient, @patient.family), class: "btn btn-info" %>
    <% end %>
    <%= link_to "編集", edit_hospital_patient_path(@hospital, @patient), class: "btn btn-default" %>
  </div>
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <div class="col-md-4">
        <p class="title-bar patient__history">
          <span>診察履歴</span>
        </p>
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <th>2017年3月1日</th>
              <td><button type="button" class="btn btn-success btn-xs"><i class="fa fa-file-o fa-fw" aria-hidden="true"></i>CSV</button></td>
            </tr>
            <tr>
              <th>2017年3月1日</th>
              <td><button type="button" class="btn btn-success btn-xs"><i class="fa fa-file-o fa-fw" aria-hidden="true"></i>CSV</button></td>
            </tr>
            <tr>
              <th>2017年3月1日</th>
              <td><button type="button" class="btn btn-success btn-xs"><i class="fa fa-file-o fa-fw" aria-hidden="true"></i>CSV</button></td>
            </tr>
            <tr>
              <th>2017年3月1日</th>
              <td><button type="button" class="btn btn-success btn-xs"><i class="fa fa-file-o fa-fw" aria-hidden="true"></i>CSV</button></td>
            </tr>
            <tr>
              <th>2017年3月1日</th>
              <td><button type="button" class="btn btn-success btn-xs"><i class="fa fa-file-o fa-fw" aria-hidden="true"></i>CSV</button></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-8">
        <p class="title-bar patient__history">
          <span>カルテ情報</span>
        </p>
        <button type="button" class="btn btn-default">カルテ情報を編集する</button>
        <div class="patient__carte">
          <%= image_tag("img01.jpg", style: "width: 100%") %>
        </div>
      </div>
    </div>
  </div>
</div>

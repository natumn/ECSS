<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>患者名</th>
      <th>病名</th>
      <th>年齢</th>
      <th>住所</th>
      <th>電話番号</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.id, hospital_patient_path(@hospital, patient) %></td>
        <td><%= patient.name %></td>
        <td><%= patient.disease %></td>
        <td class="text-right"><%= patient.age %>歳</td>
        <td><%= patient.address %></td>
        <td><%= patient.tel %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "患者登録", new_hospital_patient_path(@hospital), class: "btn btn-default" %>

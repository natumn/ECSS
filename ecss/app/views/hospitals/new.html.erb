<%= form_for @hospital do |f| %>
  <% if @hospital.errors.any? %>
    <div class="alert alert-danger text-center" role="alert">
      <h4><%= @hospital.errors.count %>件の未記入のところがあります。</h4>
      <% @hospital.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <div class="row">
    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label :名前, class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :name, placeholder: "病院名", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :ログインID, class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :username, placeholder: "ログインID（半角英数字）", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :電話番号, class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :tel, placeholder: "電話番号", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :mail, placeholder: "メールアドレス", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号, class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :postcode, placeholder: "郵便番号", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :address, placeholder: "住所", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-5 col-sm-offset-4 update-button">
          <%= f.submit "登録する", class: "btn btn-danger btn-group-justified" %>
        </div>
      </div><!-- form-group update-button -->
    </div><!-- form-horizontal -->
  </div><!-- row -->
<% end %>

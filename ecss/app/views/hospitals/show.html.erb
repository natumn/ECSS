<div class="right-content__main">
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <table class="table table-striped table-bordered">
        <p class="title-bar bg-default">
        患者情報
        </p>
        <tbody>
          <tr>
            <div class="row">
              <th class="col-md-2">名称</th>
              <td class="col-md-6"><%= @hospital.name %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">ログインID</th>
              <td class="col-md-6"><%= @hospital.username %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">電話番号</th>
              <td class="col-md-6"><%= @hospital.tel %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">メールアドレス</th>
              <td class="col-md-6"><%= @hospital.mail %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">所在地</th>
              <td class="col-md-6">
                〒<%= @hospital.postcode %><br>
                <%= @hospital.address %>
              </td>
          </tr>
        </tbody>
      </table>
      <div class="edit-button">
        <%= link_to "編集", edit_hospital_path(@hospital), class: "btn btn-default" %>
      </div>
      </div><!-- col-md-10 -->
    </div><!-- row -->
  </div>

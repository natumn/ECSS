<div class="right-content__main">
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <table class="table table-striped table-bordered">
        <p class="title-bar">
          <span>病院情報</span>
        </p>
        <tbody>
          <tr>
            <div class="row">
              <th class="col-md-2">名称</th>
              <td class="col-md-6"><%= @hospital.name %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">ログインID</th>
              <td class="col-md-6"><%= @hospital.username %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">電話番号</th>
              <td class="col-md-6"><%= @hospital.tel %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">メールアドレス</th>
              <td class="col-md-6"><%= @hospital.mail %></td>
            </div>
          </tr>
          <tr>
            <div class="row">
              <th class="col-md-2">所在地</th>
              <td class="col-md-6">
                〒<%= @hospital.postcode %><br>
                <%= @hospital.address %>
              </td>
          </tr>
        </tbody>
      </table>
        <%= link_to hospital_patients_path(@hospital), class: "btn btn-color" do %>
          <i class="fa fa-users fa-fw" aria-hidden="true"></i>患者一覧
        <% end %>
        <%= link_to "患者登録", new_hospital_patient_path(@hospital), class: "btn btn-default" %>
        <%= link_to "編集", edit_hospital_path(@hospital), class: "btn btn-default" %>
    </div><!-- col-md-9 -->
  </div><!-- row -->
</div>
